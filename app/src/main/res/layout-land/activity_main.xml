<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:background="@color/black"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="@color/white"


        android:textSize="25sp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b4"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b4"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b7"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b8"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/b4"
        android:layout_toRightOf="@+id/b4"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b9"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/b8"
        android:layout_toRightOf="@+id/b8"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b8"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b5"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b0"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b6"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b9"
        android:layout_toEndOf="@+id/b8"
        android:layout_toRightOf="@+id/b8"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bSum"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/b9"
        android:layout_toRightOf="@+id/b9"
        android:background="@color/black"
        android:onClick="onClickOperator"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bClear"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:background="@color/black"
        android:text="Del"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/bEqual"
        android:layout_toEndOf="@+id/bEqual"
        android:layout_below="@+id/bDiv" />

    <Button
        android:id="@+id/button32"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bSum"
        android:layout_toRightOf="@+id/b9"
        android:background="@color/black"
        android:onClick="onClickOperator"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bMul"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:background="@color/black"
        android:onClick="onClickOperator"
        android:text="x"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_below="@+id/button32"
        android:layout_toRightOf="@+id/b6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bDiv"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bMul"
        android:layout_toEndOf="@+id/bEqual"
        android:layout_toRightOf="@+id/bEqual"
        android:background="@color/black"
        android:onClick="onClickOperator"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="35sp"
        />

    <Button
        android:id="@+id/bEqual"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/b2"
        android:layout_toEndOf="@+id/b0"
        android:layout_toRightOf="@+id/b0"
        android:background="@color/black"
        android:onClick="onClickEqual"
        android:text="="
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/b6"
        android:layout_toEndOf="@+id/b5"
        android:layout_toRightOf="@+id/b5"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <Button
        android:id="@+id/bDot"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b1"
        android:background="@color/black"
        android:onClick="onClickNumber"
        android:text="."
        android:textColor="@color/white"
        android:textSize="35sp" />

</RelativeLayout>